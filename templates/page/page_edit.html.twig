{% extends '@OHMediaBackend/base.html.twig' %}

{% block meta_title %}{{ form_title }}{% endblock %}

{% block breadcrumbs %}
  {{ bootstrap_breadcrumbs(
    bootstrap_breadcrumb(bootstrap_icon('files') ~ ' Pages', 'page_index'),
    bootstrap_breadcrumb(page.name, 'page_view', {id: page.id}),
    bootstrap_breadcrumb('Edit'),
  ) }}
{% endblock %}

{% block main %}
<div class="row">
  <div class="col-xl-8">
    <div class="card">
      <div class="card-body">
        <h1 class="card-title h3">{{ form_title }}</h1>

        {% set form_path %}
          <div class="mb-3">
            <label class="form-label">Path</label>
            <div class="input-group">
              <span class="input-group-text">
                {{ page.parent ? page.parent.path : '' }}/
              </span>
              {{ form_widget(form.slug) }}
            </div>
            <p class="form-text mb-0 help-text">
              Leave this blank to auto-generate a value.
              {% if page.isHomepage %}
              <br /><i><b>Note:</b> changing the slug of the homepage has no effect.</i>
              {% endif %}
            </p>
            {{ form_errors(form.slug) }}
          </div>
        {% endset %}

        {{ form_start(form) }}
          {{ form_row(form.name) }}
          {{ form_path|raw }}
          {{ form_rest(form) }}
        {{ form_end(form) }}
      </div>
    </div>
  </div>
</div>
{% endblock %}

{% block javascripts %}
  {% if form.locked_user_types is defined %}
    <script>
    document.addEventListener('DOMContentLoaded', function() {
      const locked = document.getElementById['{{ form.locked.vars.id }}'];

      const lockedUserTypes = document.querySelectorAll('input[name="{{ form.locked_user_types.vars.full_name }}[]"]');

      let allUserType = null, otherUserTypes = [];

      lockedUserTypes.forEach(function(lockedUserType) {
        if ('0' === lockedUserType.value) {
          allUserType = lockedUserType;
        } else {
          otherUserTypes.push(lockedUserType);
        }
      });

      allUserType.addEventListener('change', function() {
        if (allUserType.checked) {
          otherUserTypes.forEach(function(otherUserType) {
            otherUserType.checked = false;
          });
        }
      });

      otherUserTypes.forEach(function(otherUserType) {
        otherUserType.addEventListener('change', function() {
          if (otherUserType.checked) {
            allUserType.checked = false;
          }
        });
      });
    });
    </script>
  {% endif %}
{% endblock %}
