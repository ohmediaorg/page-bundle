<div
  class="page-content page-content__row page-content__row--{{ content.layout }}"
  {% if is_preview %}
  title="{{ name|humanize|e('html_attr') }}"
  data-ohmedia-page-content="{{ name|e('html_attr') }}"
  {% endif %}
>
  {% if content.layout %}
    <div class="page-content__col page-content__col--1">
      {{ wysiwyg(content.column1, allowed_tags) }}
    </div>

    {% if content.layoutHasTwoColumns %}
    <div class="page-content__col page-content__col--2">
      {{ wysiwyg(content.column2, allowed_tags) }}
    </div>
    {% endif %}

    {% if content.layoutHasThreeColumns %}
    <div class="page-content__col page-content__col--3">
      {{ wysiwyg(content.column3, allowed_tags) }}
    </div>
    {% endif %}
  {% endif %}
</div>
